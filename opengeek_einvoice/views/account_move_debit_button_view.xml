<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit_debit_button" model="ir.ui.view">
            <field name="name">account.move.form.debit.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="%(opengeek_einvoice.action_open_debit_note_wizard)d"
                            string="Add Debit Note"
                            type="action"
                            class="oe_highlight"
                            groups="account.group_account_invoice"
                            invisible="state != 'posted' or move_type not in ('out_invoice','in_invoice')"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
