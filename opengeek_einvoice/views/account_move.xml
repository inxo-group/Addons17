<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="einvoice_account_move_form" model="ir.ui.view">
            <field name="name">einvoice.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Botón: solo visible cuando NO está enviada -->
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <button name="e_send_invoice"
                            string="Enviar a DGII"
                            type="object"
                            class="oe_highlight"
                            invisible="esubmitted"/>
                </xpath>

                <!-- Campos: insertarlos cerca de 'to_check' (si existe) -->
                <xpath expr="//field[@name='to_check']" position="after">
                    <field name="esubmitted" readonly="1"/>
                    <field name="einvoice_status" readonly="1"/>
                    <field name="einvoice_trackId" readonly="1"/>

                    <field name="dgii_qr_image"
                           widget="image"
                           class="oe_avatar"
                           options="{'preview_image': 'dgii_qr_image'}"
                           colspan="2"
                           readonly="1"/>

                    <field name="dgii_codigo_seguridad" readonly="1"/>
                    <field name="dgii_fecha_firma" readonly="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
